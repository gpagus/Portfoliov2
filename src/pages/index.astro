---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
  <!-- Sección central con título y navegación -->
  <div class="flex-1 flex flex-col justify-center">
    <!-- Título central -->
    <div class="flex justify-center mb-0 lg:mb-8 -mt-16 md:-mt-20 lg:-mt-24">
      <h1 class="text-[15vw] leading-tight flex items-center relative group">
        <span class="group-hover:opacity-50 transition-opacity duration-300">&lt;</span>
        <span class="overflow-hidden flex gap-0">
          <span class="font-elegant italic inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0.5s;">G</span>
          <span class="font-elegant italic inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0.3s;">p</span>
          <span class="inline-block w-2 md:w-3"></span>
          <span class="inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0s;">A</span>
          <span class="inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0.1s;">g</span>
          <span class="inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0.4s;">u</span>
          <span class="inline-block opacity-0 animate-rise hover:text-primary transition-colors duration-300" style="animation-delay: 0.6s;">s</span>
        </span>
        <span class="group-hover:opacity-50 transition-opacity duration-300">/&gt;</span>
      </h1>
    </div>

  </div>

  <!-- Sección inferior con información -->
  <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16 lg:gap-32 pb-8 animate-content">
    <!-- Bloque de texto izquierdo -->
    <div class="flex flex-col items-center w-full md:w-1/3 text-center group">
      <img
        src="/images/Hey.webp"
        class="w-8 h-8 md:w-12 md:h-12 mb-4 transition-transform duration-300 group-hover:scale-110"
        alt="Saludo"
        loading="lazy"
      />
      <p class="text-xs md:text-sm leading-relaxed transition-all duration-300 group-hover:text-primary">
        AGUSTÍN TAMBIÉN CONOCIDO COMO GPAGUS ES UN DESARROLLADOR WEB DE MONTIJO, BADAJOZ, ESPAÑA.
      </p>
    </div>

    <!-- Ilustración central -->
    <div
      id="three-container"
      class="w-24 h-24 md:w-32 md:h-32 lg:w-48 lg:h-48 flex justify-center items-center hover:scale-110 transition-transform duration-500"
    >
      <div class="w-full h-full bg-primary/10 rounded-full flex items-center justify-center">
        <span class="text-primary text-2xl">🐐</span>
      </div>
    </div>

    <!-- Bloque de texto derecho -->
    <div class="flex flex-col items-center w-full md:w-1/3 text-center group">
      <img
        src="/images/Solution.webp"
        class="w-8 h-8 md:w-12 md:h-12 mb-4 transition-transform duration-300 group-hover:scale-110"
        alt="Solución"
        loading="lazy"
      />
      <p class="text-xs md:text-sm leading-relaxed transition-all duration-300 group-hover:text-primary">
        APASIONADO POR CREAR SOLUCIONES DIGITALES QUE MARCAN UNA DIFERENCIA.
      </p>
    </div>
  </div>
</Layout>