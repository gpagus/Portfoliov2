---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex-1 flex flex-col justify-center">
    <div class="grid md:grid-cols-2 gap-12 md:gap-24 w-full">
      <!-- Columna Izquierda -->
      <div class="space-y-8">
        <!-- Título Principal con animación original -->
        <div class="space-y-4">
          <h1
            class="font-elegant text-4xl md:text-5xl relative flex items-center"
          >
            <span class="overflow-hidden flex">
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.1s;">L</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.2s;">e</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.3s;">t</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.4s;">'</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.5s;">s</span
              >
            </span>
            <span class="mx-2"></span>
            <span class="overflow-hidden flex">
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.6s;">c</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.7s;">o</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.8s;">l</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 0.9s;">l</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.0s;">a</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.1s;">b</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.2s;">o</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.3s;">r</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.4s;">a</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.5s;">t</span
              >
              <span
                class="inline-block opacity-0 animate-rise"
                style="animation-delay: 1.6s;">e</span
              >
            </span>
            <span class="absolute -right-4 top-0 text-2xl animate-bounce"
              >✦</span
            >
          </h1>
          <p
            class="text-xl md:text-3xl font-light opacity-0 animate-fadeInUp"
            style="animation-delay: 1.8s;"
          >
            and make good sh*t together
          </p>
        </div>

        <!-- Descripción con hover effect -->
        <p
          class="text-gray-600 leading-relaxed max-w-md transform transition-all duration-300 hover:translate-x-2"
        >
          Currently looking for new opportunities to create amazing digital
          experiences. Let's work together to bring your ideas to life.
        </p>

        <!-- Enlaces Sociales con hover effects -->
        <div class="space-y-6">
          <div class="space-y-3">
            <p class="text-sm text-gray-500">Social</p>
            <div class="space-y-2">
              <a
                href="#"
                class="group flex items-center space-x-2 hover:opacity-70 transition-all duration-300"
              >
                <span
                  class="inline-block w-6 h-px bg-text group-hover:w-12 transition-all duration-300"
                ></span>
                <span>Twitter (X)</span>
              </a>
              <a
                href="#"
                class="group flex items-center space-x-2 hover:opacity-70 transition-all duration-300"
              >
                <span
                  class="inline-block w-6 h-px bg-text group-hover:w-12 transition-all duration-300"
                ></span>
                <span>Instagram</span>
              </a>
              <a
                href="#"
                class="group flex items-center space-x-2 hover:opacity-70 transition-all duration-300"
              >
                <span
                  class="inline-block w-6 h-px bg-text group-hover:w-12 transition-all duration-300"
                ></span>
                <span>LinkedIn</span>
              </a>
            </div>
          </div>

          <!-- Email con hover effect -->
          <div class="space-y-3">
            <p class="text-sm text-gray-500">Email</p>
            <a
              href="mailto:agp0004@gmail.com"
              class="group inline-flex items-center space-x-2 hover:opacity-70 transition-all duration-300"
            >
              <span
                class="inline-block w-6 h-px bg-text group-hover:w-12 transition-all duration-300"
              ></span>
              <span>agp0004@gmail.com</span>
            </a>
          </div>

          <!-- Location info -->
          <div class="pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-500">Based in</p>
            <p
              class="mt-2 hover:translate-x-2 transition-transform duration-300"
            >
              Montijo, Badajoz, Spain
            </p>
          </div>
        </div>
      </div>

      <!-- Columna Derecha - Ilustración con hover effect -->
      <div
        class="hidden md:flex items-center justify-end relative overflow-hidden group h-full"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-transparent to-bg/50 pointer-events-none z-10"
        >
        </div>
        <img
          src="../resources/images/selfi.jpg"
          alt="Developer illustration"
          class="w-2/3 transition-all duration-500 group-hover:scale-105 relative z-0"
        />
      </div>
    </div>
  </div>
</Layout>
